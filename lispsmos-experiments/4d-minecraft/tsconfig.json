{
  "compilerOptions": {
    "module": "es2020",
    "lib": ["es2015"],
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declarationMap": true,
    "declaration": true,
    "outDir": "dist",
    "allowJs": true,
    "moduleResolution": "node",
    "types": ["node"],
    "downlevelIteration": true
  },
  "include": ["src/"]
}